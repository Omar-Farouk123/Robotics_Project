<mujoco model="iiwa14 scene">
	<include file="iiwa14.xml" />
	<asset>
		<texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
			height="3072" />
		<texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
			rgb2="0.1 0.2 0.3"
			markrgb="0.8 0.8 0.8" width="300" height="300" />
		<material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
			reflectance="0.2" />
		<texture name="ground_tex" type="2d" builtin="checker" width="512" height="512"
			rgb1="0.2 0.3 0.2" rgb2="0.1 0.1 0.1" />
		<material name="mat_ground" texture="ground_tex" texrepeat="5 5" reflectance="0.2" />

		<mesh name="conveyor" file="conveyor/ConveyorBelt.obj" scale="0.015 0.015 0.015" />
		<material name="conveyor_mat" texture="conveyor_tex" reflectance="0.3" />
		<texture name="conveyor_tex" type="2d"
			file="assets/conveyor/ConveyorBelt.png" />

		<mesh name="ceiling_lights" file="ceilingLights/model.obj" scale="1 1 1" />
		<material name="ceiling_lights_mat" texture="ceiling_lights_tex" reflectance="0.3" />
		<texture name="ceiling_lights_tex" type="2d"
			file="assets/ceilingLights/_img0.png" />
	</asset>
	<worldbody>
		<light name="main_light" pos="0 0 3" dir="0 0 -1" directional="true" />
		<!-- Larger floor for factory setting -->
		<geom name="floor" type="plane" pos="0 0 -0.1" size="30 30 0.1" rgba="0.8 0.9 0.8 1"
			material="mat_ground" />
		<!-- Conveyor belt - try fine-tuning with these values -->
		<body name="conveyor" pos="-1.0 0 0" euler="1.6 0 0">
			<geom type="mesh" mesh="conveyor" material="conveyor_mat" />
		</body>

		<body name="ceiling_lights_1" pos="-1.0 0 3" euler="1.6 0 0">
			<geom type="mesh" mesh="ceiling_lights" material="ceiling_lights_mat" />
		</body>
		<body name="ceiling_lights_2" pos="-1.0 1 3" euler="1.6 0 0">
			<geom type="mesh" mesh="ceiling_lights" material="ceiling_lights_mat" />
		</body>
		<body name="ceiling_lights_3" pos="-1.0 -1 3" euler="1.6 0 0">
			<geom type="mesh" mesh="ceiling_lights" material="ceiling_lights_mat" />
		</body>
		<body name="ceiling_lights_5" pos="-1.0 -2 3" euler="1.6 0 0">
			<geom type="mesh" mesh="ceiling_lights" material="ceiling_lights_mat" />
		</body>
	</worldbody>
</mujoco>